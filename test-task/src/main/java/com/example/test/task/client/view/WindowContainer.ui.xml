<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field="res" type="com.example.test.task.client.ResourceBundle" />

	<g:VerticalPanel>
		<g:HorizontalPanel>
			<g:SimplePanel ui:field="windowIconPanel" />
			<g:Label text="Please set window title here" ui:field="titleLbl" />
			<g:PushButton ui:field="closeBtn" styleName="{res.css.closeButton}">
				<g:upFace image="{res.closeButtonIcon}" />
				<g:upHoveringFace image="{res.closeButtonIcon}" />
				<g:downFace image="{res.closeButtonIcon}" />
				<g:downHoveringFace image="{res.closeButtonIcon}" />
			</g:PushButton>
		</g:HorizontalPanel>
		<g:SimplePanel ui:field="contentPanel" />
		<g:HorizontalPanel ui:field="controlPanel"
			horizontalAlignment="ALIGN_RIGHT" verticalAlignment="ALIGN_MIDDLE" />
	</g:VerticalPanel>
</ui:UiBinder> 